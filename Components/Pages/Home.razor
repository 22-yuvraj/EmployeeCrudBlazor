@page "/"
@rendermode InteractiveServer
@inject NavigationManager NavigationManager

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.
<button @onclick="Navigate">Navigate</button>
<div class="row">
    <div class="col-12">
        <h2 class="fw-bolder">Welcome</h2>
    </div>
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <AuthorizeView>
                    <NotAuthorized>
                        <span>You are not logged in. Please <a class="fw-bolder" href="/login">click here</a> to login</span>
                    </NotAuthorized>
                    <Authorized>
                        <span>
                          Logged in as <b>@context.User.Identity.Name</b>.<a class="fw-bolder" href="/logout">Click here</a> to logout
                        </span>
                    </Authorized>
                </AuthorizeView>
            </div>
        </div>
    </div>
</div>
@code {
    void Navigate()
    {
        Console.WriteLine("Navigate");
        NavigationManager.NavigateTo("/counter");
    }
}
